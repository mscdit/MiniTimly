<p style="color: green"><%= notice %></p>

<h1>Item overview</h1>
<% if user_signed_in? %>
<div id="items">
  <table class="table table-dark table-striped-columns table-hover">
      <tr>
        <td>
          Name:
        <td>
          Brand:
        </td>
        <td>
          Owner:
        </td>
      </tr>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= link_to item.name, item, class: "link-light" %>
        </td>
        <td>
          <%= item.brand %>
        </td>
        <td>
          <%= item.user.email %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New item", new_item_path, class: "btn btn-success" %>

<% else %>
<p>You have to sign in, to get access to your item list.</p>
<% end %>