<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div id="items">
  <table class="table table-dark table-striped-columns">
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.name %>
        </td>
        <td>
          <%= item.brand %>
        </td>
        <td>
          <%= link_to "Show this item", item %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New item", new_item_path %>
