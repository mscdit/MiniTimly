<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div id="items">
  <table class="table table-dark table-striped-columns table-hover">
      <tr>
        <td>
          Name:
        <td>
          Brand:
        </td>
      </tr>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= link_to item.name, item, class: "link-light" %>
        </td>
        <td>
          <%= item.brand %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New item", new_item_path, class: "btn btn-secondary" %>
